<script src="Proxy.js"/>
<script src="Filter.js"/>
<script src="ProxyManager.js"/>
<script src="options.js" />
 
<!--
<prefpane id="firemole-pane" label="Secure Proxy Settings" onpaneload="onOptionsLoad()" >

  <preferences></preferences>
