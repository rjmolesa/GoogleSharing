<dialog id="googlesharing-options" title="Protected Search Proxy Preferences" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" width="620" height="200" buttons="accept,cancel" onload="onOptionsLoad();" ondialogaccept="return onOptionsSave();">

